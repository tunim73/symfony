{% extends 'base.html.twig' %}

{% block title %}Minhas s√©ries{% endblock %}

{% block body %}

    <a href="{{ path("app_series_form_GET") }}" class="btn btn-outline-primary mb-3">Adicionar</a>
    <ul class="list-group">
        {% for serie in seriesList %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ serie.name }}

                <div class="d-flex  ">
                    <a class="btn btn-warning me-2"
                       href={{ path('app_series_form_edit_GET', {id:serie.id} ) }}
                        >EDIT</a>
                    <form action="{{ path('app_delete_series', {id: serie.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-sm btn-danger">X</button>
                    </form>
                </div>
            </li>
        {% endfor %}

    </ul>

{% endblock %}
